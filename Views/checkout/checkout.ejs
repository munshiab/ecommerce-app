<div class="container">
  <h3 class="center-align">Checkout</h3>

  <form action="/checkout/confirm" method="POST" class="checkout-form">
    <!-- Address Section -->
    <div class="row">
      <h5>Shipping Address</h5>
      <div class="input-field col s12">
        <input id="street" name="address" type="text" required>
        <label for="street">Street Address</label>
      </div>
      <div class="input-field col s12 m6">
        <input id="city" name="city" type="text" required>
        <label for="city">City</label>
      </div>
      <div class="input-field col s12 m6">
        <input id="state" name="state" type="text" required>
        <label for="state">State</label>
      </div>
      <div class="input-field col s12 m6">
        <input id="postal_code" name="postal_code" type="text" required>
        <label for="postal_code">Postal Code</label>
      </div>
      <div class="input-field col s12 m6">
        <input id="country" name="country" type="text" required>
        <label for="country">Country</label>
      </div>
    </div>

    <!-- Payment Section -->
    <div class="row">
      <h5>Payment Details</h5>
      <div class="input-field col s12">
        <select name="payment_method" id="payment_method" required>
          <option value="" disabled selected>Select Payment Method</option>
          <option value="Credit Card">Credit Card</option>
          <option value="PayPal">PayPal</option>
          <option value="Bank Transfer">Bank Transfer</option>
        </select>
        <label for="payment_method">Payment Method</label>
      </div>
      <div class="input-field col s12">
        <input
          id="total_amount"
          name="total_amount"
          type="text"
          value="<%= totalAmount %>"
          readonly
        />
        <label for="total_amount">Total Amount</label>
      </div>      
    </div>

    <!-- Submit Button -->
    <div class="row center-align">
      <button type="submit" class="btn waves-effect waves-light">Complete Transaction</button>
    </div>
  </form>
</div>

<script>
  // Initialize Materialize CSS Select
  document.addEventListener('DOMContentLoaded', function() {
    const elems = document.querySelectorAll('select');
    M.FormSelect.init(elems);
  });
</script>
